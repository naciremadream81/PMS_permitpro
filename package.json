{
  "name": "permitpro",
  "version": "1.0.1",
  "description": "PermitPro - Permit Management System",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "echo 'Building...' && bun run db:generate && echo 'Build complete'",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "node seed.js",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t permitpro .",
    "docker:run": "docker run -p 8000:8000 permitpro",
    "frontend:dev": "cd permitpro-frontend && bun run dev",
    "frontend:build": "cd permitpro-frontend && bun run build",
    "frontend:start": "cd permitpro-frontend && bun run start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "@prisma/client": "^5.7.0"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "@types/bun": "latest"
  },
  "prisma": {
    "seed": "node seed.js"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
